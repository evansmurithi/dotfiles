[core]

	editor = vim

[alias]

	co = checkout
	cob = checkout -b
	s = status
	a = add
	aa = add --all
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	fl = log -u
	ps = push
	pl = pull
	fo = fetch origin
	fom = fetch origin master:master
	r = rebase
	c = commit
	pom = pull origin master

[color "branch"]

	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]

	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]

	added = yellow
	changed = green
	untracked = cyan

[diff "ansible-vault"]

	textconv = ansible-vault view
